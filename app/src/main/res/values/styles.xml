<resources>

    <!--layout-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linearVerticalParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearHorizonalParent" parent="parent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--text-->
    <style name="loginHeaderText" parent="parent">
        <item name="android:textColor">@color/lightAccentColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginText" parent="parent">
        <item name="android:textColor">@color/darkAccentColor</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/miniTextSize</item>
    </style>

    <style name="cardHeaderText" parent="viewParent">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallBlackText" parent="viewParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="mediumLightText" parent="viewParent">
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bigLightText" parent="viewParent">
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hugeLightText" parent="viewParent">
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textSize">@dimen/hugeTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="reviewerNicknameText" parent="viewParent">
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PageTitleText" parent="viewParent">
        <item name="android:textColor">@color/containerColor</item>
        <item name="android:textSize">@dimen/pageTitleSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>




    <!--buttons-->
    <style name="mediumRoundButton" parent="viewParent">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="bigSquareRoundedButton" parent="viewParent">
        <item name="android:background">@drawable/square_rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="mediumSquareRoundedButton" parent="viewParent">
        <item name="android:background">@drawable/square_rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="smallSquareRoundedButton" parent="viewParent">
        <item name="android:background">@drawable/square_rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--objects-->
    <style name="rating" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:numStars">5</item>
    </style>


</resources>
