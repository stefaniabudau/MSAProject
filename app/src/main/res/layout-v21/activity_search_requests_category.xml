<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requests"
            style="@style/PageTitleText"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/nearYouDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/near_you"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_location_on_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/accentColor"/>

        <TextView
            android:id="@+id/errandsDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/errands"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_directions_run_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/foodDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/food"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_food_bank_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/imageBorderColor"/>

        <TextView
            android:id="@+id/babySuppliesDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/baby_supplies"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_child_friendly_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/lightAccentColor"/>

        <TextView
            android:id="@+id/schoolSuppliesDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_supplies"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_school_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/accentColor"/>

        <TextView
            android:id="@+id/otherDonationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_baseline_add_24"
            android:background="@drawable/border_soft_shadow"
            android:backgroundTint="@color/darkAccentColor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
</ScrollView>