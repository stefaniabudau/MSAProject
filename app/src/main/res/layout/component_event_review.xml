<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_shadow"
    android:orientation="vertical"
    android:padding="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="match_parent"
        style="@style/bigLightText"
        android:text="@string/text_received_ratings"
        android:layout_marginBottom="@dimen/mediumViewsMargin"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/creatorNicknameReviewText"
        style="@style/bigLightText"
        android:text="@string/value_event_nickname_creator"/>
    <include layout="@layout/component_average_review"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/assigneeNicknameReviewText"
        style="@style/bigLightText"
        android:text="@string/value_event_nickname_assignee"/>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/mediumLightText"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_rating_honesty"/>

            <RatingBar
                android:id="@+id/averageHonestyRating2"
                style="@style/rating"
                android:gravity="end"
                android:rating="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/mediumLightText"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_rating_punctuality"/>

            <RatingBar
                android:id="@+id/averagePunctualityRating2"
                style="@style/rating"
                android:gravity="end"
                android:rating="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/mediumLightText"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_rating_attitude"/>

            <RatingBar
                android:id="@+id/averageAttitudeRating2"
                style="@style/rating"
                android:gravity="end"
                android:rating="0" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
