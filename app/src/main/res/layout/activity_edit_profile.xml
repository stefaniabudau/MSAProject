<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="user" type="com.e.thetogetherapp.data.model.User"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <View
            android:background="@drawable/ic_baseline_west_24"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            style="@style/bigLightText"
            android:text="@string/edit_profile"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_email_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEmail"
            style="@style/modifiedEditText"
            android:text="@={user.email}"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_name_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editName"
            style="@style/modifiedEditText"
            android:text="@={user.name}"
            android:hint="@string/register_name_hint"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_nickname_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editNickname"
            style="@style/modifiedEditText"
            android:text="@={user.nickname}"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_age_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editAge"
            style="@style/modifiedEditText"
            android:text="@={user.age}"
            android:inputType="number"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_country_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editCountry"
            style="@style/modifiedEditText"
            android:text="@={user.location[&quot;country&quot;]}"
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_city_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editCity"
            style="@style/modifiedEditText"
            android:text='@={user.location[&quot;city&quot;]}'
            android:inputType="text"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_address_hint"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editAddress"
            style="@style/modifiedEditText"
            android:text='@={user.location[&quot;address&quot;]}'
            android:inputType="text"
            android:maxLines="2"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>


        <Button
            android:id="@+id/saveEditProfileButton"
            style="@style/bigSquareRoundedButton"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mediumViewsMargin"
            android:text="@string/save" />

    </LinearLayout>

</layout>
