<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_requests"
                style="@style/PageTitleText"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center" />


            <TextView
                android:id="@+id/nearYouRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_near_you"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_location_on_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/accentColor"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/errandsRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_errands"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_directions_run_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/colorPrimary"
                tools:targetApi="lollipop" />


            <TextView
                android:id="@+id/foodRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_food"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_food_bank_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/imageBorderColor"
                tools:targetApi="lollipop" />


            <TextView
                android:id="@+id/babySuppliesRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_baby_supplies"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_child_friendly_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/lightAccentColor"
                tools:targetApi="lollipop" />



            <TextView
                android:id="@+id/schoolSuppliesRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_school_supplies"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_school_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/accentColor"
                tools:targetApi="lollipop" />


            <TextView
                android:id="@+id/otherRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_category_other"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:drawableTopCompat="@drawable/ic_baseline_add_24"
                android:background="@drawable/border_soft_shadow"
                android:backgroundTint="@color/darkAccentColor"
                tools:targetApi="lollipop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/component_navigation_bar"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
