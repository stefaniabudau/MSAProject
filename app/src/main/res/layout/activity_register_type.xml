<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="false"
    android:layout_alignParentTop="false"
    android:layout_alignParentRight="false"
    android:layout_alignParentBottom="false"
    android:background="@drawable/register_bk"
    android:focusableInTouchMode="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/registerAsNeedy"
            style="@style/squareRoundedButton"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:text="@string/register_as_needy" />

        <Button
            android:id="@+id/registerAsVolunteer"
            style="@style/squareRoundedButton"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_marginTop="@dimen/largeViewsMargin"
            android:text="@string/register_as_volunteer" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
