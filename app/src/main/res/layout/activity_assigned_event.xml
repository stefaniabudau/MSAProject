<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4ECEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <View
            android:background="@drawable/ic_baseline_west_24"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <include layout="@layout/component_event_details"/>
            <include layout="@layout/component_event_creator"/>
            <include layout="@layout/component_event_creator"/>

            <Button
                android:id="@+id/completedEventButton"
                style="@style/mediumSquareRoundedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Mark as Completed" />
            <Button
                android:id="@+id/cancelEventButton"
                style="@style/mediumSquareRoundedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Cancel" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        
    </LinearLayout>

</ScrollView>