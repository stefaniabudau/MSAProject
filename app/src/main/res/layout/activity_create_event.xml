<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_new_request"
            style="@style/PageTitleText"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_event_title"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventTitle"
            style="@style/modifiedEditText"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_event_location"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventLocation"
            style="@style/modifiedEditText"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_event_date"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventDate"
            style="@style/modifiedEditText"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_event_time"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventTime"
            style="@style/modifiedEditText"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_event_description"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventDescription"
            style="@style/modifiedEditText"
            android:maxLines="15"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_event_category"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/createEventCategory"
            style="@style/modifiedEditText"
            android:maxLines="15"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:inputType="text" />

        <Button
            android:id="@+id/submitCreateEventButton"
            style="@style/bigSquareRoundedButton"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mediumViewsMargin"
            android:text="@string/text_submit_donation" />

    </LinearLayout>

</ScrollView>
