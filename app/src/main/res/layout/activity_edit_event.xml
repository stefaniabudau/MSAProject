<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <View
            android:background="@drawable/ic_baseline_west_24"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            style="@style/bigLightText"
            android:text="Edit "
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventTitle"
            style="@style/modifiedEditText"
            android:text="add title"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventLocation"
            style="@style/modifiedEditText"
            android:text="add location"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventDate"
            style="@style/modifiedEditText"
            android:text="add time"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventTime"
            style="@style/modifiedEditText"
            android:text="add time"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventDescription"
            style="@style/modifiedEditText"
            android:text="add description"
            android:maxLines="15"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            style="@style/editProfileText"/>
        <EditText
            android:id="@+id/editEventCategory"
            style="@style/modifiedEditText"
            android:text="add category"
            android:maxLines="15"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

        <Button
            android:id="@+id/saveEditProfileButton"
            style="@style/bigSquareRoundedButton"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/mediumViewsMargin"
            android:text="@string/text_save" />

    </LinearLayout>

</ScrollView>
