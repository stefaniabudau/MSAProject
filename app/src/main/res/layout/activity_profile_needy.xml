<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/component_user_profile_header"/>

        <Button
            android:id="@+id/myRequestsButton"
            style="@style/mediumSquareRoundedButton"
            android:layout_width="245dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mediumViewsMargin"
            android:text="@string/text_my_requests" />

        <include layout="@layout/card_notifications"/>
        <include layout="@layout/card_review"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>

</ScrollView>