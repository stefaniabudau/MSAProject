<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="148dp"
        tools:ignore="MissingConstraints">

        <include layout="@layout/component_banner_user_info"/>

        <Button
            android:id="@+id/myRequestsButton"
            style="@style/mediumSquareRoundedButton"
            android:layout_width="245dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mediumViewsMargin"
            android:text="@string/myRequests" />

        <include layout="@layout/card_notifications"></include>
        <include layout="@layout/card_review"></include>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>